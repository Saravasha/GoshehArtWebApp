@model IdentityUser

@{
    ViewData["Title"] = "Delete";
}

<section class="container my-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Delete Confirmation</h2>
        </div>

        <div class="p-4">

            <h3 class="mb-4 card-header-pills border-danger border-bottom border-1">Are you sure you want to delete <strong>@Model.UserName</strong>?</h3>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-controller="User" asp-action="Delete" method="post" class="mb-0">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash mr-1"></i>Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </div>
</section>
