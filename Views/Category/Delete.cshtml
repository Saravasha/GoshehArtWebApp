@model CategoryViewModel

@{
    ViewData["Title"] = "Delete Category";
}

<section class="container my-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Delete Confirmation</h2>
        </div>

        <div class="alert alert-warning m-0" role="alert">

            <p>Are you sure you want to delete the category <strong>@Model.Name</strong>?</p>
            @if (Model.Assets != null && Model.Assets.Any())
            {
                <hr />
                <p><strong>This category is associated with the following assets:</strong></p>
                <ul>
                    @foreach (var asset in Model.Assets)
                    {
                        <li>@asset.Name</li>
                    }
                </ul>
            }
            else
            {
                <p>This category has no associated assets.</p>
            }
        </div>

        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" method="post" class="form-inline mb-0">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mr-2">
                    <i class="bi bi-trash-fill mr-1"></i>Delete
                </button>
            </form>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left mr-1"></i>Back to Categories
                </a>
        </div>
    </div>
</section>
