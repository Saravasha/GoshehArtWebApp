@model CategoryViewModel

@{
    ViewData["Title"] = "Category Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container">
    <h1>@ViewBag.Title</h1>
    <p><a asp-controller="Category" asp-action="Create">Create a new Category</a></p>
        <table class="table table-dark table-primary table-responsive table-striped mt-1">
        <thead>
            <tr>
                <th>
                    Category
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-primary">
            @foreach (var item in Model.Categories)
            {
                    <tr class="table-secondary">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="d-flex flex-row gap-2 justify-content-end">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (ViewBag.IsInUse == "isinuse")
    {
        <p>Is in use!</p>
    }
</section>