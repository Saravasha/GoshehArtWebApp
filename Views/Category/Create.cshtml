@model CreateCategoryViewModel

@{
    ViewData["Title"] = "Create Category";
}

<section class="container my-4">
    <h1 class="mb-3">@ViewData["Title"]</h1>
    <h4 class="mb-4">Add a new Category</h4>
    <form asp-action="Create" class="card shadow-sm p-4" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Category Name -->
        <div class="form-group mb-3">
            <label asp-for="Name" class="font-weight-semibold">Category Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <!-- Submit + Back -->
        <div class="d-flex justify-content-between align-items-center mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-circle mr-1"></i>Create
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left mr-1"></i>Back to Categories
            </a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
