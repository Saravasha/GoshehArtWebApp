@model Content

@{
    ViewData["Title"] = "Delete";
}


<section class="container">
    <h1>@ViewBag.Title</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
    
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Title)</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)        
            </dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Container)</dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Container)
            </dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Page)</dt>
            <dd class="col-sm-10">
                @if (Model.Page != null && !string.IsNullOrEmpty(Model.Page.Title))
                {
                    <p>@Model.Page.Title</p>
                }
                else
                {
                    @:
                }
            </dd>
        </dl>


        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</section>