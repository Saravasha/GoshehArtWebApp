                <th>Body</th>
                <th>Page</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-primary">
            @foreach (var content in Model.Contents)
            {
                <tr class="table-secondary">
                    @* <td>@Html.DisplayFor(content => content.Id)</td> *@
                    <td>@Html.DisplayFor(modelItem => content.Title)</td>
                    <td>@Html.DisplayFor(modelItem => content.Body)</td>
                    <td>@Html.DisplayFor(modelItem => content.Page.Title)</td>
