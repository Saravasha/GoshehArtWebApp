@model IEnumerable<Content>

@{
    ViewData["Title"] = "Content Control Panel";
}

<section class="container-fluid">
    <h1>@ViewBag.Title</h1>
    <p><a asp-controller="Content" asp-action="Create" class="btn btn-outline-success">Add new Content</a></p>
    <table class="table table-dark table-primary table-responsive table-bordered table-striped table-striped mt-1">
        <thead class="thead-dark">
            <tr class="table-dark">
                <th class="align-middle">Content Title</th>
                <th class="text-center align-middle">Content Body</th>
                <th class="text-center align-middle">Page Parent</th>
                <th class="text-center align-middle">Content Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-primary">
            @foreach (var item in Model)
            {
                <tr class="table-secondary">
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.Title)</td>
                    <td class="text-center align-middle">@Html.Raw(item.Container)</td>
                    <td class="text-center align-middle">
                        @if (item?.Page != null && !string.IsNullOrEmpty(item.Page.Title))
                        {
                            @item.Page.Title
                        }
                        else
                        {
                            @:
                        }
                    </td>
                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Date)</td>
                    <td class="text-center align-middle">
                        <div class="d-flex align-items-center flex-row gap-2 justify-content-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-group-sm btn-outline-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-group-sm btn-outline-primary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-group-sm btn-outline-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>