                    @*     { *@
                    @*         @content.Title *@
                    @*         <br /> *@
                    @*     } *@
                    @* </td> *@
                    <td><a asp-action="Edit" asp-route-id="@content.Id" class="btn btn-group-sm btn-outline-primary">Edit</a></td>
                    <td><a asp-action="Details" asp-route-id="@content.Id" class="btn btn-group-sm btn-outline-primary">Details</a></td>
                    <td><a asp-action="Delete" asp-route-id="@content.Id" class="btn btn-group-sm btn-outline-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</section>