@model AssetViewModel

@{
    ViewData["Title"] = "Asset Index";
}

<section class="container-fluid">
    <h1>@ViewBag.Title</h1>

    <div class="d-flex justify-content-between align-items-end flex-wrap ">
        <div class="btn-group gap-2 ">
            <a asp-action="Create" class="btn btn-outline-success">Add new Asset</a>
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Catalog" asp-action="Index" class="btn btn-outline-danger">Sync Catalogs</a>
            }
            <a asp-action="MultipleAssets" class="btn btn-outline-success">Add Multiple Assets</a>
        </div>
        <div class="card mt-1">
            <div class="card-body">
                <form asp-action="Index" method="get" class="row g-2 align-items-center">
                    <div class="col-auto">
                        <label for="searchString" class="col-form-label fw-semibold">Search</label>
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="searchString" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Name, location, etc." />
                    </div>
                    <div class="col-auto">
                        <label for="fromDate" class="col-form-label fw-semibold">From</label>
                    </div>
                    <div class="col-md-2">
                        <input type="date" id="fromDate" name="fromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" class="form-control" />
                    </div>

                    <div class="col-auto">
                        <label for="toDate" class="col-form-label fw-semibold">To</label>
                    </div>
                    <div class="col-md-2">
                        <input type="date" id="toDate" name="toDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" class="form-control" />
                    </div>

                    <div class="col-md-auto ms-auto d-flex gap-2">
                        <button type="submit" class="btn btn-outline-primary">Search</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle mt-1">
            <thead class="table-dark">
                <tr>
                <th>Assets</th>
                <th class="text-center align-middle">Name</th>
                <th class="text-center align-middle">Description</th>
                <th class="text-center align-middle">Author</th>
                <th class="text-center align-middle">Location</th>
                <th class="text-center align-middle">Date</th>
                <th class="text-center align-middle">Categories</th>
                <th class="text-center align-middle">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var asset in Model.Assets)
            {
                <tr>
                    <td><img src="@Url.Content(asset.ImageUrl)" class="img-fluid" style="max-height:100px;" /></td>
                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => asset.Name)</td>
                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => asset.Description)</td>
                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => asset.Author)</td>
                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => asset.Location)</td>
                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => asset.DateString)</td>

                    @*@<td>@Html.DisplayFor(modelItem => asset.Categories)</td>*@

                    <td class="text-center align-middle">
                        @foreach (var assetCategory in asset.Categories)
                        {
                            @assetCategory.Name
                            <br />
                        }
                    </td>
                    <td class="text-center align-middle">
                        <div class="d-flex justify-content-center align-items-center flex-row gap-2 justify-content-end">
                            <a asp-action="Edit" asp-route-id="@asset.Id" class="btn btn-sm btn-outline-primary align-items-center justify-content-center">Edit</a>
                            <a asp-action="Details" asp-route-id="@asset.Id" class="btn btn-sm btn-outline-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@asset.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</section>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<script>

    document.addEventListener('DOMContentLoaded', function () {
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.forEach(function (tooltipTriggerEl) {
            new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>