@model IEnumerable<Color>

@{
    ViewData["Title"] = "Colors Index";
}


<section class="container-fluid">
    <h1>@ViewBag.Title</h1>
    @{
        if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-outline-success">Create another Color</a>
        }
    }
    <table class="table table-dark table-primary table-responsive table-bordered table-striped table-striped mt-1">
        <thead class="thead-dark">
            <tr class="table-dark">
                <th class="text-center align-middle">Name</th>
                <th class="text-center align-middle">Start Color</th>
                <th class="text-center align-middle">End Color</th>
                <th class="text-center align-middle">Color Swath</th>
                <th class="text-center align-middle">Darkmode Start Color</th>
                <th class="text-center align-middle">Darkmode End Color</th>
                <th class="text-center align-middle">Darkmode Color Swath</th>
                <th class="text-center align-middle">Actions</th>
            </tr>
        </thead>
        <tbody class="table-primary">
            @foreach (var item in Model)
            {
                <tr class="table-secondary">
                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.StartColor)</td>
                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.EndColor)</td>
                    <td class="d-flex flex justify-content-center align-items-center">
                        <div style="@($"height:10rem; width:10rem; background: linear-gradient(to right, {item.StartColor}, {item.EndColor});")">
                        </div>
                    </td>
                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.DarkStartColor)</td>
                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.DarkEndColor)</td>
                    <td class="d-flex flex justify-content-center align-items-center">
                        <div style="@($"height:10rem; width:10rem; background: linear-gradient(to right, {item.DarkStartColor}, {item.DarkEndColor});")">
                        </div>
                    </td>
                    <td class="text-center align-middle">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-group-sm btn-outline-primary">Edit</a>
                        @{
                            if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-group-sm btn-outline-danger">Delete</a>
                            }
                        }
                    </td>
                </tr>
                }
        </tbody>
    </table>
</section>