@model IEnumerable<Color>

@{
    ViewData["Title"] = "Colors Index";
}

<section class="container-fluid">
    <h1>@ViewBag.Title</h1>
    <table class="table table-dark table-primary table-responsive table-bordered table-striped table-striped mt-1">
        <thead class="thead-dark">
            <tr class="table-dark">
                <th class="text-center align-middle">Background Color</th>
                <th class="text-center align-middle">Gradient Color End Target</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="table-primary">
            @foreach (var item in Model)
                {
                <tr class="table-secondary">
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.BgColor)</td>
                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.GradientColor)</td>
                     <td>

                        <div class="d-flex align-items-center flex-row gap-2 justify-content-center">

                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-group-sm btn-outline-primary">Edit</a>
                        </div>
                     </td>   
                </tr>
                }
        </tbody>
    </table>
</section>